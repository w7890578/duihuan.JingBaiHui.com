            clear: both;
            line-height: 36px;
            text-align: center;
            color: #b6b6b6;
            background-color: #eff4fa;
            border-top: 1px solid #d6dfea;
        }

        .header_logo {
            margin-left: 40px;
        }

        .header_logo {
            float: left;
            _display: inline;
            width: 182px;
            height: 35px;
            margin-top: 14px;
            margin-left: 17px;
            text-indent: -9999em;
            background-size: 182px 35px;
            background-repeat: no-repeat;
            background-position: left center;
            background-image: url(http://www.jbh-lp.com/images/default/20150615/9a88bd6a29477348.png);
        }

        .header a, .footer a {
            color: #1d5494;
        }

        a {
            text-decoration: none;
        }

        .content_left {
            width: 620px;
            float: left;
        }

        .content_right {
            width: 320px;
            float: right;
            border: 1px solid #d6dfea;
            padding: 5px 5px 45px 5px;
            border-radius: 5px;
            height: 406px;
        }

        .inputstyle {
            top: 0px;
            padding: 10px 40px 10px 10px;
            left: 0px;
            border-radius: 3px;
            width: 232px;
            height: 18px;
            line-height: 18px;
            border: 1px solid #d6dfea;
            background: 0;
            font-family: Verdana,Tahoma,Arial;
            font-size: 16px;
        }

        .login_button {
            background: none;
            height: 40px;
            line-height: 39px;
            width: 100%;
            outline: none;
            font-weight: normal;
        }

        .login_button {
            width: 115px;
            height: 35px;
            line-height: 35px;
            border: 0;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            cursor: pointer;
            border-radius: 5px;
        }

        .switch_btn_focus {
            color: #333;
            height: 45px;
            line-height: 45px;
            outline: 0;
        }

        div.arrow-right {
            width: 0px;
            height: 0px;
            border-top: 20px solid transparent;
            border-bottom: 20px solid transparent;
            border-left: 30px solid red;
            font-size: 0px;
            line-height: 0px;
        }

        div.arrow-right_gray {
            width: 0px;
            height: 0px;
            border-top: 20px solid transparent;
            border-bottom: 20px solid transparent;
            border-left: 30px solid gray;
            font-size: 0px;
            line-height: 0px;
        }

        .arrow-up {
            width: 0px;
            height: 20px;
            border-left: 30px solid transparent;
            /*border-right: 20px solid transparent;*/
            border-bottom: 20px solid red;
            /*以下属性可以是IE5兼容*/
            font-size: 0px;
            line-height: 0px;
        }

        .arrow-down {
            width: 0px;
            height: 0px;
            border-left: 30px solid transparent;
            /*border-right: 30px solid transparent;*/
            border-top: 20px solid red;
            font-size: 0px;
            line-height: 0px;
        }

        .arrow-up_gray {
            width: 0px;
            height: 20px;
            border-left: 30px solid transparent;
            /*border-right: 20px solid transparent;*/
            border-bottom: 20px solid gray;
            /*以下属性可以是IE5兼容*/
            font-size: 0px;
            line-height: 0px;
        }

        .arrow-down_gray {
            width: 0px;
            height: 0px;
            border-left: 30px solid transparent;
            /*border-right: 30px solid transparent;*/
            border-top: 20px solid gray;
            font-size: 0px;
            line-height: 0px;
        }

        .products {
            width: 200px;
            height: 230px;
            border: 1px solid #d6dfea;
            float: left;
            margin: 15px;
